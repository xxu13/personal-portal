# ==========================================
# Personal Portal - Production Environment
# Copy this file to .env and fill in values
# ==========================================

# ==========================================
# Domain Configuration
# ==========================================
DOMAIN=shawn.xin

# ==========================================
# Database Configuration (Docker MySQL)
# ==========================================
# Root password for MySQL administration
DB_ROOT_PASSWORD=your-secure-root-password-here

# Application database credentials
DB_PASSWORD=your-secure-db-password-here

# Database URL for backend (connects to Docker MySQL via localhost)
DATABASE_URL=mysql+asyncmy://portal_user:your-secure-db-password-here@127.0.0.1:3306/personal_portal

# ==========================================
# Redis Configuration (Docker Redis)
# ==========================================
REDIS_URL=redis://127.0.0.1:6379/0

# ==========================================
# Security Configuration
# ==========================================
# JWT Secret Key (generate with: openssl rand -hex 32)
SECRET_KEY=your-very-long-and-secure-secret-key-at-least-32-characters

# CORS Origins (frontend domain)
CORS_ORIGINS=["https://shawn.xin","https://www.shawn.xin"]

# ==========================================
# Application Settings
# ==========================================
# Debug mode (set to false in production)
DEBUG=false

# Log level
LOG_LEVEL=info

# Upload directory (relative to backend/)
UPLOAD_DIR=uploads

# Max upload size in MB
MAX_UPLOAD_SIZE=20

# ==========================================
# Admin Account (Initial Setup)
# ==========================================
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@shawn.xin
ADMIN_PASSWORD=your-secure-admin-password

# ==========================================
# Optional: Email Configuration
# ==========================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-email-password
# SMTP_FROM=noreply@shawn.xin

# ==========================================
# Optional: Cloudflare Configuration
# ==========================================
# CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
# CLOUDFLARE_ZONE_ID=your-zone-id
